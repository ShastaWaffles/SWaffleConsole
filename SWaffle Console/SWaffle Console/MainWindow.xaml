<Window x:Class="SWaffle_Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWaffle_Console"
        mc:Ignorable="d"
        Title="SWaffle PEAK Console v0.1.0" Height="449" Width="929"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- Log Display -->
        <RichTextBox Name="LogBox" Grid.Row="0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" />

        <!-- Input and Send Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0" KeyDown="CommandInput_KeyDown">
            <TextBox Name="CommandInput" Width="600" Margin="0,0,10,0" />
            <Button Content="Send" Width="100" Click="Send_Click" />
            <Button Content="Open Asset Browser"
            Click="OpenAssetBrowser_Click"
            Width="150" Height="30" Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
